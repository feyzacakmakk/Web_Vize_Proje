	<!-- Start post-content Area -->
	<section class="post-content-area">
		<div class="container">			   		   
			<div class="row">
				
				<div class="col-lg-8 posts-list">
					@foreach (var item in Model)
				    {
					
					<div class="single-post row">
						<div class="col-lg-3  col-md-3 meta-details">
						
							<div class="user-details row">
								 
								<p class="date col-lg-12 col-md-12 col-6"><a href="#">@(((DateTime)item.DuyuruTarihi).ToString("dd-MMM-yyyy"))</a> <span class="lnr lnr-calendar-full"></span></p>
							</div>
						</div>
						<div class="col-lg-9 col-md-9">
								<a class="posts-title" href="/Duyuru/DuyuruDetayi/@item.DuyuruID">
								<h3>@item.DuyuruBasligi</h3>
							</a>
							<p class="excert">
									@item.DuyuruAciklamasi.Substring(0,item.DuyuruAciklamasi.Substring(0,20).LastIndexOf(" "))...
									
								
								
							</p>
							<a href="/Duyuru/DuyuruDetayi/@item.DuyuruID" class="view-more-btn">Devamını Gör </a>
						</div>
					</div>
						}
