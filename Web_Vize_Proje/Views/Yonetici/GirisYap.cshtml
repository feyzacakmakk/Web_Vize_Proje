@{
	ViewData["Title"] = "Giriş";
	Layout = null;
}


<!doctype html>
<html lang="en">
<head>
	<partial name="/Views/Home/Partials/_HeadPartial.cshtml" />


	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="/WebVize/css/login_css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/WebVize/img/login_images/giris_arkaplan.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section font-weight-bold text-monospace" style="color: #6f42c1; ">GİRİŞ</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">

						<form action="/Yonetici/GirisYap/" method="post" class="signin-form">
							<div class="form-group">
								<input type="text" class="form-control" name="YoneticiKullanıcıAdi" placeholder="Kullanıcı Adı" required="">
							</div>
							<div class="form-group">
								<input id="password-field" type="password" name="YoneticiSifre" class="form-control" placeholder="Şifre" required="" >
								<span toggle="#password-field" class=" toggle-password"></span>
							</div>
							<div class="form-group">

								<a href="/Yonetici/Duyurular" class="form-control btn btn-primary text-center submit pt-3">Giriş</a>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-50">
									<label class="checkbox-wrap checkbox-primary">
										Beni Hatırla
										<input type="checkbox" checked>
										<span class="checkmark"></span>
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a href="#" style="color: #fff">Şifremi Unuttum</a>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="/WebVize/js/login_js/jquery.min.js"></script>
	<script src="/WebVize/js/login_js/popper.js"></script>
	<script src="/WebVize/js/login_js/bootstrap.min.js"></script>
	<script src="/WebVize/js/login_js/main.js"></script>

</body>
</html>

