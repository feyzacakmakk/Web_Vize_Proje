@model IEnumerable<Duyuru>


<div class="col-lg-4 sidebar-widgets"  style="margin-top: 20px;">
	<div class="widget-wrap">
		
			<div class="single-sidebar-widget popular-post-widget">
				<h4 class="popular-title">SON DUYURULAR</h4>
			@foreach (var item in Model)
			{
				<div class="popular-post-list">
					<div class="single-post-list d-flex flex-row align-items-center">
						<div class="details">
							<a href="/Duyuru/DuyuruDetayi/@item.DuyuruID/">  
								<h6>@item.DuyuruBasligi</h6>
							</a>
							<p>@(((DateTime)item.DuyuruTarihi).ToString("dd-MMM-yyyy"))</p>
						</div>
					</div>
					

				</div>
			}
			</div>

	</div>
</div>